<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AnimeNet.view.Generos"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             Visual="Material">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Definición de la primera fila con una altura de 100 unidades -->
            <RowDefinition Height="43" />
            <!-- Definición de la segunda fila con una altura automática -->
            <RowDefinition Height="105" />
        </Grid.RowDefinitions>
        <RelativeLayout BackgroundColor="Black"
                        Grid.Row="0">
            
            <Button WidthRequest="50"
                    HeightRequest="45"
                    Margin="10"
                    ImageSource="atras.png"
                    BackgroundColor="Black"
                    Clicked="Button_Clicked"></Button>
                
        </RelativeLayout>
        <RelativeLayout Grid.Row="1"
                        BackgroundColor="Black">
            <Image x:Name="icoGenero"
                   Source= "fuego.png"
                   RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                   Margin="0, 20,75, 0"/>
            <Label x:Name="lblGenero"
                   TextColor="White"
                   FontSize="20"
                   RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                   HorizontalTextAlignment="Center"
                   Margin="40, 30, 0, 0" />
            <Label x:Name="lblDescripcion"
                   RelativeLayout.WidthConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width}"
                   HorizontalTextAlignment="Center"
                   Margin="0, 65, 0, 0"
                   TextColor="White"
            />
            
        </RelativeLayout>
        <CollectionView x:Name="CollectionAnimes"
                        Margin="10"
                        HorizontalScrollBarVisibility="Never"
                        Grid.Row="2">
            <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="5">
                            <Frame Padding="5"
                                   CornerRadius="10"
                                   HasShadow="True"
                                   HeightRequest="150"
                                   BackgroundColor="Black">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                                          Tapped="Frame_Tapped" />
                                </Frame.GestureRecognizers>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width=".3*" />
                                        <ColumnDefinition Width=".7*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height=".8*" />
                                        <RowDefinition Height=".5*" />
                                    </Grid.RowDefinitions>
                                    <Image Grid.RowSpan="2"
                                           Source="{Binding imagePoster}"
                                           Aspect="AspectFit"
                                           HorizontalOptions="FillAndExpand"
                                           VerticalOptions="FillAndExpand" />
                                    <Label Text="{Binding name}"
                                           Grid.Column="1"
                                           FontAttributes="Bold"
                                           FontSize="Large"
                                           TextColor="White"
                                           Margin="30" />
                                     <Label Text="Sub | Dob"
                                           Grid.Row="1"
                                           Grid.Column="1"
                                           TextColor="White"
                                           Margin="30,15,0,0" />
                            </Grid>
                            </Frame>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
     </Grid>
</ContentPage>